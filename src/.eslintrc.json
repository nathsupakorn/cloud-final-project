{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        // "eslint:recommended",
        "plugin:react/jsx-runtime",
        "plugin:react/recommended"
        // "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    // "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "consistent-return": 2,
        "indent"           : [1, 4],
        "no-else-return"   : 1,
        "semi"             : [1, "always"],
        "space-unary-ops"  : 2,
        "react/react-in-jsx-scope": "off"
    },
    "ignorePatterns": [
        "node_modules",
        "build",
        "dist",
        "public"
      ]
}
